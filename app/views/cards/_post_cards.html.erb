<div class="mt-5 col-md-12">
  <% novels.each do |novel| %>
    <% if !novel.is_draft%>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= novel.title %></h4><!--タイトル表示-->
          <p class="card-text border-top">
            著者：<%= novel.user.name %><!--作者表示-->
            
            <!--この小説のお題を表示-->
            <span class="right">
              <% subjects = novel.link_subject %>
              <% subjects.each do |subject| %>
                <span class="badge badge-pill badge-dark">
                  <%= subject.word.content %>
                </span>
              <% end %>
            </span>
            
          </p>
          
          <%= render "buttons/delete_button", novel: novel %><!--削除ボタン-->
          <%= render "buttons/view_button", novel: novel %><!--閲覧ボタン-->
          
          <!--期間内であれば編集ボタンを表示＆アラート文-->
          <%= render "buttons/edit_button", novel: novel %>
          
          <!--お気に入りボタン-->
          <span class="right">
            <%= render "buttons/favorite_button", novel: novel %>
          </span>
        </div>
      </div>
    <% end %>
  <% end %>
</div>