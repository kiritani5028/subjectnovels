<div class="text-center">
  <h1><%= @user.name %></h1>
  <%= link_to "アカウント削除", @user, method: :delete, class: 'btn btn-danger btn-sm' %>
  <%= link_to "新規小説作成", new_novel_path, class: 'btn btn-success btn-sm' %>
</div>
<div>
  <p>投稿済みリスト</p>
  <ul>
    <% @novels.each do |novel| %>
      <% if !novel.is_draft%>
        <li>
          <%= novel.title %>
          <div>
            <%= link_to "削除", novel, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <%= link_to "編集", edit_novel_path(novel), class: 'btn btn-success btn-sm' %>
            <%= link_to "閲覧", novel_path(novel), class: 'btn btn-success btn-sm' %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
<div>
  <p>下書きリスト</p>
  <ul>
    <% @novels.each do |novel| %>
      <% if novel.is_draft%>
        <li>
          <%= novel.title %>
          <div>
            <% if current_user == novel.user %>
              <%= link_to "削除", novel, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
            <% end %>
            <% if current_user == novel.user %>
              <%= link_to "編集", edit_novel_path(novel), class: 'btn btn-success btn-sm' %>
            <% end %>
          </div>
        </li>
      <% end %>
    <% end %>
  </ul>
</div>
